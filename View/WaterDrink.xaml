<UserControl x:Class="WaterDrink.View.WaterDrink"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WaterDrink.View"             
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <hc:SimpleStackPanel>
        <hc:Row Margin="0,5,0,0" Height="40" Background="Gray" >
            <hc:Col Width="100" HorizontalAlignment="Left">
                <hc:ButtonGroup Orientation="Vertical">
                    <Button Content="开始" Command="{Binding Start}"/>
                    <Button Content="退出" Command="{Binding Exit}"/>
                </hc:ButtonGroup>
            </hc:Col>
        </hc:Row>
        <hc:Row Margin="0,5,0,0" Height="150" Background="Green">

        </hc:Row>
        <hc:Row Margin="0,5,0,0" Height="220" Background="Red">
            
        </hc:Row>
        
            

    </hc:SimpleStackPanel>
</UserControl>
